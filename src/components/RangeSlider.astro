<div style="
display: flex;
position: relative;
justify-content: space-between;
align-items: center;
gap: var(--gap);
padding-left: 0.5ch; 
padding-right: 0.5ch;
margin-top: var(--gap);">

	<span id="characters">16</span>
	<span>Characters</span>
					
</div>

<input type="range"  id="rangeInput" min="12" max="20" value="16" list="values" class="slider"
style = "
-webkit-appearance: none;
appearance: none;
cursor: pointer;
--position: 50%;
height: 7px;
width: 97.5%;
border-radius: 1ch;
outline: none;
border: 1px solid var(--accent-color);
display: flex;
margin-left: auto;
margin-right: auto;
margin-top: 1ch;
background-color: rgba(45, 45, 45,1);
background-image: linear-gradient(rgba(180, 185, 185, 1), rgba(250, 255, 255, 1));
background-clip: content-box;
background-size: 120% 1ch;
background-position: calc(600% - ( var(--position) * 5) );
background-repeat: no-repeat;
">

<div  style="font-size: var(--extra-small-font);">

 	<p class="flex-slider">
		<span> ╹ </span> <span> ╹ </span> <span> ╹ </span><span> ╹ </span> 
		<span> ╹ </span> <span> ╹ </span> <span> ╹ </span><span> ╹ </span>
		<span> ╹ </span>
 	</p>

 	<p class="flex-slider">	
		<span> 12 </span> <span> 13 </span> <span> 14 </span><span> 15 </span> 
		<span> 16 </span> <span> 17 </span> <span> 18 </span><span> 19 </span>
		<span> 20 </span>
 	</p>

</div>

<style >


.slider::-webkit-slider-thumb {
	-webkit-appearance: none;
	appearance: none;
	width: var(--small-clickable);
	height: var(--small-clickable);
	border-radius: 50%;
	background: var(--slider-thumb-color);
	border: 2px solid var(--accent-color); ;
	cursor: pointer;
	box-shadow: var(--small-shadow);
}

.slider::-moz-range-thumb {
	width: var(--small-clickable);
	height: var(--small-clickable);
	border-radius: 50%;
	background: var(--slider-thumb-color);
	border: 2px solid var(--accent-color) ;
	cursor: pointer;
	box-shadow: var(--small-shadow);
}

.flex-slider{

	display: flex;
	justify-content: space-between;
	height: 10px; 
	font-size: var(--extra-small-font);
	padding: 2px 0px;

}

.flex-slider > span {
 display: inline-block; 
 text-align: center;
 display: flex;
 margin-left: auto;
 margin-right: auto;
 z-index: -1;
 
}
</style>

<script>

document.getElementById("generate")!.addEventListener("input", (e) => {
	if ((e!.target as HTMLInputElement).matches("#rangeInput")) {
		const value = Number((e!.target as HTMLInputElement).value);
		document
			.getElementById("rangeInput")!
			.style.setProperty("--position", ((Number(value) - 12) / 8) * 100 + "%");
		document
			.getElementById("characters")!
			.textContent = value.toString();
	}
});

</script>