---
interface Props {
  identifier: string;
  formHandler?: string; 
}

const { identifier, formHandler } = Astro.props;
---


<dialog data-corvu-no-drag id={ identifier } class="prose max-width glass" 
style="max-width:min(350px, 100%);
  padding: var(--size-sm3);
  border-radius: var(--radius-b);
  place-content:center;
  background: oklch(var(--gray-15) / 0.85);">
  <form method="dialog" style="display:flex; flex-direction:column;"
  {...(formHandler ? { 'onsubmit': formHandler } : {})}>
  <slot />
</form>

</dialog>

