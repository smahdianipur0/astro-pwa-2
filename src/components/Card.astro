---
interface Props {
	title?: string;
	iden: string;
}

const { title , iden } = Astro.props;
---



<div class="prose max-width" style="color: oklch(var(--gray-95) );" id={iden}>
		{title && (<h3 style=" margin-bottom:0; " >{title}</h3>)}

  <div style="
	background: var(--border);	
	padding: 1px;
	border-radius: var(--radius-b);
	width: auto;
	height: auto;
	">
    <div class="glass box-shadow" style="
	--box-shadow-opacity: 0.06;
	border-radius: var(--radius-b);
	padding: var(--gap-x04);
	contain: paint;
	background-color: oklch(var(--gray-10) / 0.5);
	width: auto;
	height: auto">

      <slot />

    </div>
  </div>
</div>