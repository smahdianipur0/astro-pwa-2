---
interface Props {
	title?: string;
	iden: string;
}

const { title , iden } = Astro.props;
---

<div class="prose" style="color: oklch(var(--gray-95) );
width: -moz-available;
width: -webkit-fill-available;" id={iden}>

  <div style="
	background: var(--border);	
	padding: 1px;
	border-radius: var(--radius-b);
	width: auto;
	height: auto;
	">
    <div class="glass box-shadow" style="
	--box-shadow-opacity: 0.06;
	border-radius: var(--radius-b);
	padding: var(--gap-x04);
	contain: paint;
	background-color: oklch(var(--gray-10) / 0.5);
	width: auto;
	height: auto">
	{title && (
		<h2 style="
		  line-height: var(--gap-x03);
		  margin-top: 0;
		  font-weight: 600;
		  margin-bottom: var(--gap-x04);">
		  {title}
		</h2>
	  )}
      <slot />

    </div>
  </div>
</div>