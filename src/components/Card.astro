---
interface Props {
	
	title: string;
	iden: string;
	
}

const { title , iden } = Astro.props;
---

<div id={iden}>
	
<p style="
font-weight: bold; 
font-size: var(--big-font); 
margin-top: var(--gap);
margin-bottom: var(--gap);
text-align: center;">
{ title }</p>

<div style="
background: var(--border);	
padding: 1px;
border-radius: var(--radius-b);
width: auto;
height: auto;
	">
	<div class="glass" style="
	border-radius: var(--radius-b);
	padding: var(--gap-x04);
	contain: paint;
	background-color: oklch(var(--gray-back-100) / 0.5);
	box-shadow: 4px 6px 20px 2px oklch(0% 0 0/.2);
	width: auto;
	height: auto" >

<slot/>

</div>
</div>	
</div>

