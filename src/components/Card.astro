---
interface Props {
	title: string;
	iden: string;
}

const { title , iden } = Astro.props;
---

<div class="prose" style="color: oklch(var(--gray-95) );" id={iden}>

  <h2 style="
	margin-top: var(--gap);
	margin-bottom: var(--gap);
	text-align: center; ">
    { title }</h2>

  <div style="
	background: var(--border);	
	padding: 1px;
	border-radius: var(--radius-b);
	width: auto;
	height: auto;
	">
    <div class="glass" style="
	border-radius: var(--radius-b);
	padding: var(--gap-x04);
	contain: paint;
	background-color: oklch(var(--gray-10) / 0.5);
	box-shadow: 4px 6px 20px 2px oklch(0% 0 0/.2);
	width: auto;
	height: auto">
      <slot />

    </div>
  </div>
</div>