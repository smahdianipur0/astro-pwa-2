    <input checked="checked" id=tab1 type="radio" name="tab" data-tab=tab1 />
    <input id=tab2 type="radio" name="tab" data-tab=tab2 />

    <nav>
      <label for=tab1 data-tab-label=tab1 role="tab">tab1</label>
      <label for=tab2 data-tab-label=tab2 role="tab">tab2</label>
    </nav>

