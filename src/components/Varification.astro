<input id="use_varif" type="checkbox" style="accent-color: var(--primary);
opacity: 0.6;" disabled >

<div style="display: flex;
position: relative;
justify-content: space-between;
align-items: center;
gap: 1ch;">

	<div  id="varif_detail" class= "varif_detail_cl" style="line-height: 2ch;
    font-weight: 300;
    font-size:var(--big-font);"> <div class="skeleton" style="width:10ch"></div> </div>

	<button  id = "varif_detail_re" class=" unstyle-button copy varif_detail_cl">
	<div class="skeleton" style="width:5ch"></div> </button>

</div>

<div id="varif_hint" class="hint varif_detail_cl"><div class="skeleton" style="width:20ch"></div></div>


<style >
	
#use_varif::after{
	content :  "Use Decrypted text as key for varification code" ;
	color:var(--accent-color);
	font-size: var(--regular-font);
	display: block;
	margin-left: 3ch;
	width: 41ch;
	line-height: 1.2;
}

:root:has(#enc:checked) #use_varif::after {
	content :  "Use plain text as key for varification code" ;

}
.varif_detail_cl{
	display: none;
}

:root:has(#use_varif:checked) .varif_detail_cl{
	display: block;
}



</style>