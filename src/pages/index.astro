---
import Layout from '../layouts/Layout.astro';
import GeneratePass from '../components/GeneratePass.astro'; 
import Encdec from '../components/Encdec.astro';
import Varification from '../components/Varification.astro';
import QRCode from '../components/QRCode.astro'; 
import About from '../components/About.astro';
import Emails from '../components/Emails.astro';
import Records from '../components/Records.astro';

---

<Layout title="Generate and encrypt Passwords">

	<div  class="tab-content one" > 
	  <div class="prose grid-layout">

	     	<Emails/>
			<GeneratePass/>
			<Varification/> 
			<details class="prose grid-layout">
				<summary>More Tools</summary>
				
				<Encdec/>
				<QRCode/> 
			</details>
			
		
	  </div> 
	</div>


	<div class="tab-content two">
		<div class="prose grid-layout">

			<Records>


		</div>
	</div>


	<div class="tab-content three"> 
		<div class="prose grid-layout" > 
		
			

		</div>
	</div>


	<div id="testAbout" class="tab-content four"> 
		<div class="grid-layout prose">

	   		<About/>
	   		
		</div>
	</div>
    
</Layout>

<script src="../components/recentDelPassScript.ts"></script>

<style>
	
.grid-layout {
	display: grid;
	gap:var(--size-sm3);
	grid-template-columns: repeat(auto-fit, clamp(200px, 350px, 100% ) )  ;
	justify-content: center;
 	padding-bottom: calc(var(--size-lg3) + var(--size-sm3));
}

</style>