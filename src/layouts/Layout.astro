  ) oklch(0.8 0 0 / 0.4);
  background-size: 200% 100%;
  background-position-x: 180%;
  animation: 1s loading ease-in-out infinite;

}

@keyframes loading {
  to {
    background-position-x: -20%;
  }
}

.skeleton-parrent{
  line-height: var(--text-height); 
  overflow: hidden;
}

.card-bg{
  height: 7.7125ch;
  height: 8.032ch;
  width: 100%  ;
  position: absolute; 
  margin: -2ch -2ch;
  background: var(--card-bg-color);
