<style is:global>


input{
  accent-color: var(--primary);
}


.glass {
  -webkit-backdrop-filter: blur(20px);
  backdrop-filter: blur(20px)
}

.reflection{
  border: 0.2px solid oklch(84% 0.078 273/ 0.6);
  box-shadow: inset 0.6px 0.6px 0px 0px oklch(84% 0.078 273/ 0.6), 
                    1px   2px   2px 0px oklch(0% 0 0 / 0.1) ;
}

.dent-shadow {
  box-shadow: inset 0px 2px 5px oklch(0% 0 0 / 0.2) , 
                    0px 2px 2px oklch(100% 0 0 / 0.1) , 
                    0px 0px 1px 0.5px oklch(100% 0 0 / 0.1) ;
}

.flex{
  display: flex;
  position: relative;
  justify-content: space-between;
  gap: var(--gap);
}

.hide-checkbox{
  opacity: 0; 
  pointer-events: none;
  position: absolute
}

.skeleton{
   font-size: inherit;
   font-family: inherit;
   height: 1.5ch;
   width: 30ch;
   margin: calc( (var(--gap-x05) - 1.5ch) / 2 ) 0;
   border-radius: 4ch;
   background-color: oklch(80% 0 0 / 0.4);
   background: linear-gradient(
    100deg,
    rgba(255, 255, 255, 0) 40%,
    rgba(255, 255, 255, .5) 50%,
    rgba(255, 255, 255, 0) 60%
  ) oklch(0.8 0 0 / 0.4);
  background-size: 200% 100%;
  background-position-x: 180%;
  animation: 1s loading ease-in-out infinite;

}

@keyframes loading {
  to {
    background-position-x: -20%;
  }
}

.skeleton-parrent{
  line-height: var(--gap-x05); 
  overflow: hidden;
}

.unstyle-button{
  background: none;
  border: none;
  box-shadow: none;
  color:oklch(var(--gray-95) / 1);
  cursor: pointer;
}

.card-bg{
  height: calc( (var(--gap-x06) * var(--x02)) + (var(--gap-x04) * 2 ) );
  width: 100%  ;
  position: absolute; 
  margin: calc( var(--gap-x04) * -1) calc( var(--gap-x04) * -1);
  background: var(--primary-bg);
}


.toast {
 display: flex;
 position: fixed; 
 background-color: oklch(var(--gray-10) / 0.5);
 border-radius: var(--radius-b);
 border: 1px solid  oklch(var(--gray-25) / 1);
 bottom: -100%;
 width: 200px; 
 left: calc(50% - 100px ); 
 align-items: center;
 justify-content: center;
 padding: var(--default-padding);
 box-sizing: border-box;
 transition: bottom 0.15s ease-out;  
 z-index: var(--z-layer-higher);
 color: var(--success);
 margin-bottom: var(--gap-x04);
}


.mx-auto {
  margin-left: auto;
  margin-right: auto
}

</style>