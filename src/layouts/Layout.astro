}

.gg-check-o {
  box-sizing: border-box;
  position: relative;
  display: block;
  transform: scale(0.7);
  width: 22px;
  height: 22px;
  border: 2px solid;
  border-radius: 100px

}

.gg-check-o::after {
  content: "";
  display: block;
