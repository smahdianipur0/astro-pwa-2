  cursor: not-allowed;
  box-shadow: 1px 2.5px 0px var(--dark-shadow-disabled) ;
}

button.disabled::before , label.disabled::before ,
button.disabled:active::before , label.disabled:active::before{
  content: "";
  position: absolute;
  inset: 0;
  z-index: -1; 
  background-color: transparent;
}


.toast {
 display: flex;
