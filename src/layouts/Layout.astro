}

.flex{
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
  gap: 1ch;
}

.skeleton{
   font-size: inherit;
   font-family: inherit;
   height: 1.5ch;
   width: 30ch;
   margin: calc( (var(--text-height) - 1.5ch) / 2 ) 0;
   border-radius: 4ch;
